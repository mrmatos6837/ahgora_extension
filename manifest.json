{
  "name": "Calculadora de jornada - Ahgora",
  "version": "0.5",
  "description": "Adiciona uma tabela com informações adicionais e a hora estimada de saída do trabalho na pagina de batidas de ponto do ahgora.",
  "icons": { 
  "16": "clock.png",
  "32": "clock.png",
  "48": "clock.png",
  "128": "clock.png"
  },
  "permissions": ["activeTab", "storage"],
  "content_scripts":[
    {
      "matches": ["https://www.ahgora.com.br/externo/batidas/*"],
      "js": ["jquery-3.3.1.js", "content.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "manifest_version": 2
}
